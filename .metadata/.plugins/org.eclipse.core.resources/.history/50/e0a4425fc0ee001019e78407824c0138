import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

class Student4
{
	String name;
	public Student4(String name) {
		super();
		this.name = name;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	@Override
	public String toString() {
		return "Student4 [name=" + name + "]";
	}
}
public class LaunchConstructorRef {

	public static void main(String[] args) 
	{
		List<String> names = Arrays.asList("Tron", "Case", "Cyber", "Punk");
//		List<Student4> students=new ArrayList<>();
		//longer way
//		for(String name:names)
//		{
//			students.add(new Student4(name));
//		}
//		students.forEach(System.out::println);
		System.out.println("*****************");
		//using constructor reference
		List<Student4> students = names.stream().map(Student4::new).toList();
		students.forEach(System.out::println);
	}

}
