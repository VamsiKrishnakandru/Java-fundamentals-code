import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;

class Cricketer
{
	int age;
	String name;
	double avg;
	
	public Cricketer(int age, String name, double avg)
	{
		super();
		this.age = age;
		this.name = name;
		this.avg = avg;
	}
	
	@Override
	public String toString() {
		return "Cricketer [age=" + age + ", name=" + name + ", avg=" + avg + "]";
	}
}
//implements
class Alphat implements Comparator<Cricketer>
{
	@Override
	public int compare(Cricketer o1, Cricketer o2) 
	{
		if(o1.avg>o2.avg)
			return 1;
		else
			return -1;
	}
}

public class LaunchComplexSorting1 {

	public static void main(String[] args) 
	{
		Cricketer c1 = new Cricketer(34,"Virat", 100.5);
		Cricketer c2 = new Cricketer(36,"Rohit", 88.5);
		Cricketer c3 = new Cricketer(30,"Pandya", 65.5);
		
		ArrayList<Cricketer> list = new ArrayList<>();
		list.add(c1);
		list.add(c2);
		list.add(c3);
		System.out.println(list);
		//implements
		Alphat alphat = new Alphat();
		Collections.sort(list, alphat);
		System.out.println(list);
		//Anaymous inner class
		Comparator<Cricketer> comp = new Comparator<Cricketer>()
				{
			@Override
			public int compare(Cricketer o1, Cricketer o2) 
			{
				if(o1.age>o2.age)
					return 1;
				else
					return -1;
			}
				};
		Collections.sort(list,comp);
		System.out.println(list);
		//Collections.sort(list); on what to sort? 
	}

}
