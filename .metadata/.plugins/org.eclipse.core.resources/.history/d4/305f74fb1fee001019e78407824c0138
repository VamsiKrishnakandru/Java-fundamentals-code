class Library implements Runnable
{
	String java = new String("Java");
	String devOps = new String("DevOps");
	String aws = new String("Cloud AWS");
	
	@Override
	public void run() 
	{
		String name = Thread.currentThread().getName();
		if(name.equals("Tron"))
		{
			try
			{
				System.out.println("Tron got into Library");
				Thread.sleep(4000);
				synchronized(aws)
				{
					System.out.println("Tron has acquired Java book");
					Thread.sleep(4000);
					synchronized(devOps)
					{
						System.out.println("Tron has acquired DevOps book");
						Thread.sleep(4000);
						synchronized(java)
						{
							System.out.println("Tron has acquired AWS book");
							Thread.sleep(4000);
						}
					}
				}
				
			}
			catch(Exception e)
			{
				System.out.println("Some problem with Tron");
			}
		}
		else
		{
			try
			{
				System.out.println("Case got into Library");
				Thread.sleep(4000);
				synchronized(java)
				{
					System.out.println("Case has acquired Java book");
					Thread.sleep(4000);
					synchronized(devOps)
					{
						System.out.println("Case has acquired DevOps book");
						Thread.sleep(4000);
						synchronized(aws)
						{
							System.out.println("Case has acquired AWS book");
							Thread.sleep(4000);
						}
					}
				}
			}
			catch(Exception e)
			{
				System.out.println("Some problem with Case");
			}
		}
	}
}
public class LaunchThread7 
{
	public static void main(String[] args) 
	{
		Library lib = new Library();
		
		Thread t1 = new Thread(lib);
		Thread t2 = new Thread(lib);
		
		t1.setName("Tron");
		t2.setName("Case");
		
		t1.start();
		t2.start();
	}
}
