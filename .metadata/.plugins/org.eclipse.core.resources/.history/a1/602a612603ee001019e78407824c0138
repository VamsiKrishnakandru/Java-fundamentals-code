import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.stream.Stream;

public class LaunchStream1 {

	public static void main(String[] args) 
	{
		List<Integer> nums = new ArrayList<>(Arrays.asList(1, 3, 4, 6, 7, 9,10)); // odd -> double it -> sum it 
		
		Stream<Integer> stream1 = nums.stream(); //collection interface has default method stream.
		nums.add(5); //we cannot directly in stream but adding in list will reflect in stream.
		Stream<Integer> stream2 = stream1.filter(n -> n % 2 == 1); //stream1 is consumed here and cannot be used anywhere.
		Stream<Integer> stream3 = stream2.map(n -> n * 2);
		stream3.forEach(n -> System.out.println(n));
		
		
		
		System.out.println(nums);
	}
}
